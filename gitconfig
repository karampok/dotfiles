[user]
	email = karampok@gmail.com
	name = Konstantinos
[alias]
        private = !sh -c 'git config user.email "karampok@gmail.com" && git config user.name "karampok"'
        st = status -sb
        ci = commit
        all = commit -am
        br = branch
        co = checkout
        di = diff
        dic = diff --cached
        lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
        lol = log --graph --decorate --oneline
        lol = log --graph --decorate --pretty=oneline --abbrev-commit
        lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
        ls = ls-files
        # Show files ignored by git:
        ign = ls-files -o -i --exclude-standard
        unstage = reset HEAD --
[color]
        branch = auto
        diff = auto
        interactive = auto
        status = auto
        ui = auto
[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green
[color "status"]
        added = yellow
        changed = green
        untracked = cyan
[core]
        whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
        excludesfile = ~/.gitignore_global
        editor = nvim
        quotepath = false
        pager = less -FXRS -x2
[credential]
	helper = !gopass git-credential $@
[github]
        user = karampok
[mergetool]
        keepBackup = true
[filter "media"]
        clean = git-media-clean %f
        smudge = git-media-smudge %f
[push]
        default = current
[difftool "vimdiff"]
        cmd = "nvim -d -u ~/.vimrc \"$LOCAL\" \"$REMOTE\""

[user]
    email = konstantinos.karampogias@swisscom.com
    name = konstantinos
[alias]
    private = !sh -c 'git config user.email "karampok@gmail.com" && git config user.name "karampok"'
    work = !sh -c 'git config user.email "konstantinos.karampogias@swisscom.com" && git config user.name \"Konstantinos Karampogias\"'
    st="!f() { br=$(git status | head -1) && echo "${br}" && git status -s; }; f"
    di = diff
    co = checkout
    br = branch
    sta = stash
    llog = log --date=local
    flog = log --pretty=fuller --decorate
    #lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    lol = log --graph --decorate --oneline
    lola = log --graph --decorate --oneline --all
    blog = log origin/master... --left-right
    log-json = log --pretty=format:'\"%h\": {%n  \"commit\": \"%H\",%n  \"author\": \"%an <%ae>\",%n  \"date\": \"%ad\",%n  \"message\": \"%s\"%n}'
    ds = diff --staged
    unstage = reset HEAD
    hist = log --all --graph --pretty='[%C(cyan)%h%Creset]%C(bold cyan)%d%Creset %s'
    get = fetch -v --recurse-submodules
    vimdiff = difftool
    rum = rebase master@{u}
    ci = duet-commit --verbose
    rebase = rebase -i --exec 'git duet-commit --amend --reset-author'
    dci = duet-commit --verbose
    dca = duet-commit --amend --reset-author --verbose
    drv = duet-revert
    dmg = duet-merge
    drb = rebase -i --exec \"git duet-commit --amend --reset-author\"
    duet-rebase = rebase -i --exec \"git duet-commit --amend --reset-author\"
    push-release = push --recurse-submodules=check
[push]
    default = simple
[url "git@github.com:"]
    pushInsteadOf = https://github.com/
[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
    ui = auto
[merge]
    tool = vimdiff
[diff]
    tool = vimdiff
    submodule = log
[difftool "vimdiff"]
    cmd = "nvim -d -u ~/.vimrc \"$LOCAL\" \"$REMOTE\""
[difftool "opendiff"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[difftool]
    prompt = yes


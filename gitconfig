[user]
	email = karampok@gmail.com
	name = karampok
	signingkey = E0DC1AAFF6FB7BE0FC533E3B5BD78E317944F776
[alias]
    br = branch
    co = checkout
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    lol = log --graph --decorate --oneline
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    unstage = reset HEAD --
    aliases = "!git config -l | grep alias | cut -c 7-"
    churn = !git --no-pager log --name-only --oneline | grep -v ' ' | sort | uniq -c | sort -nr | head
    open = "!f() { URL=$(git config remote.$1.url | cut -f2 -d:); xdg-open https://github.com/${URL%%.git}; }; f"
    browser = "!f() { git remote |fzf| xargs git open ; }; f"
    review = "!f() { BASE=${1-$REVIEW_BASE}; FILES=${2-$(git files)}; export FILES; export BASE; git reviewdiff;  }; f"
    reviewdiff = !nvim +\"tabdo Gvdiffsplit ${BASE:-master}\" +\"let g:gitgutter_diff_base = '${BASE:-master}'\" -p $(git files)

[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[core]
    pager = delta --plus-color="#012800" --minus-color="#340001" --theme='Monokai Extended'
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = ~/.gitignore_global
    editor = nvim
    quotepath = false
[credential]
	helper = !gopass git-credential $@
[github]
    user = karampok
[commit]
    gpgsign = true
    template = ~/.gitmessage
[interactive]
    diffFilter= delta --dark --plus-color="#012800" --minus-color="#340001" --theme="zenburn" --color-only
[diff]
    tool = vimdiff
[merge]
	tool = vimdiff
[mergetool "vimdiff"]
	path = nvim
    keepBackup = true
[difftool "vimdiff"]
    cmd = "nvim \"+windo set nofen\" -d \"$LOCAL\" \"$REMOTE\" "
[difftool]
	prompt = false
    trustExitCode = true


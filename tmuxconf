set-option -g prefix C-space
bind-key C-space last-window
bind-key space send-prefix
set -g base-index 1
set -s escape-time 0
set-option -g history-limit 200000

# set tmux to 256 colors
set -g default-terminal "screen-256color"
set-option -ga terminal-overrides ",*256col*:Tc"

set-option -g status-keys vi
setw -g mode-keys vi
bind-key -T copy-mode-vi 'v' send-keys -X begin-selection
bind-key -T copy-mode-vi 'y' send-keys -X copy-selection-and-cancel
bind-key -T copy-mode-vi Enter send-keys -X copy-selection-and-cancel
bind-key -T copy-mode-vi 'd' send-keys -X copy-end-of-line
bind-key -T copy-mode-vi 'Y' send-keys -X copy-pipe-and-cancel "reattach-to-user-namespace pbcopy"
#bind-key -T copy-mode-vi  C-k pageup
#bind-key -T copy-mode-vi  C-j pagedown

bind c new-window -c "#{pane_current_path}"
bind-key v split-window -h -c '#{pane_current_path}'
bind-key s split-window -v -c '#{pane_current_path}'

# Source file
unbind r
bind r source-file ~/.tmux.conf \; display "Reloaded!"

#hjkl pane traversal
bind h select-pane -L
bind j select-pane -D
bind k select-pane -U
bind l select-pane -R
bind x kill-pane


set-option -g visual-activity off
set-option -g visual-bell off
set-option -g visual-silence off
set-window-option -g monitor-activity off
set-option -g bell-action none

set -g status-left-length 100
set -g status-left "#[fg=white][@#H]    "
set -g window-status-separator ' | '
# set-option -g pane-active-border-fg green #base01
# set-option -g pane-border-fg white #base02

set -g status-right-length 100
set -g status-right '#[default]|#[fg=blue](ZRH #(TZ=Europe/Zurich date +%%H:%%M))#[fg=white](UTC #(date --utc +%%H:%%M))#[fg=green](SF #(TZ=US/Pacific date +%%H:%%M))#[default]â”ƒ #[fg=white]%a %d/%m/%y #[default]'


## COLORSCHEME: gruvbox dark
set-option -g status "on"

# default statusbar colors
set-option -g status-bg colour237 #bg1
set-option -g status-fg colour223 #fg1

# default window title colors
set-window-option -g window-status-bg colour214 #yellow
set-window-option -g window-status-fg colour237 #bg1

set-window-option -g window-status-activity-bg colour237 #bg1
set-window-option -g window-status-activity-fg colour248 #fg3

# active window title colors
set-window-option -g window-status-current-bg default
set-window-option -g window-status-current-fg colour237 #bg1

# pane border
set-option -g pane-active-border-fg colour250 #fg2
set-option -g pane-border-fg colour237 #bg1

# message infos
set-option -g message-bg colour239 #bg2
set-option -g message-fg colour223 #fg1

# writting commands inactive
set-option -g message-command-bg colour239 #fg3
set-option -g message-command-fg colour223 #bg1

# pane number display
set-option -g display-panes-active-colour colour250 #fg2
set-option -g display-panes-colour colour237 #bg1

# clock
set-window-option -g clock-mode-colour colour109 #blue

# bell
set-window-option -g window-status-bell-style fg=colour235,bg=colour167 #bg, red


## Theme settings mixed with colors (unfortunately, but there is no cleaner way)
set-option -g status-attr "none"
set-option -g status-justify "left"
